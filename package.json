{
  "name": "my-garage-backend",
  "type": "module",
  "imports": {
    "#*": "./*.js"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch -r dotenv/config server.js",
    "test": "vitest",
    "db:schema": "psql -d my_garage_db -f db/schema.sql",
    "db:seed": "node -r dotenv/config db/seed.js",
    "db:reset": "npm run db:schema && npm run db:seed",
    "build": "node scripts/build.js",
    "start:prod": "cross-env NODE_ENV=production node dist/server.js"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.16.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "vitest": "^3.1.3",
    "esbuild": "^0.19.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.1.4"
  }
}
